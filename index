    <script>
        function showCorrection() {
            document.getElementById("corr1").style.display = 'block';
            document.getElementById("corr2").style.display = 'block';
            document.getElementById("corr3").style.display = 'block';
        }

        function generatePDF() {
            const nom = document.getElementById("nom").value.trim();
            const prenom = document.getElementById("prenom").value.trim();
            if (!nom || !prenom) {
                alert("Veuillez remplir le nom et le prÃ©nom avant de gÃ©nÃ©rer le PDF.");
                return;
            }
            document.querySelectorAll('.buttons').forEach(e => e.style.display = 'none');
            html2pdf().from(document.getElementById("rapport")).save().then(() => {
                document.querySelectorAll('.buttons').forEach(e => e.style.display = 'flex');
            });
        }
